<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="pl.edu.pk.mech.controller.MainWindowController">
    <center>
        <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308"
                   maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                   BorderPane.alignment="CENTER">
            <ImageView fx:id="cameraView" fitHeight="450.0" fitWidth="490.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <ImageView fx:id="thresholdView" fitHeight="450.0" fitWidth="490.0" pickOnBounds="true"
                       preserveRatio="true"/>
        </SplitPane>
    </center>
    <left>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="260.0" text="Tracker"
                   textAlignment="CENTER">
                <padding>
                    <Insets top="10.0"/>
                </padding>
            </Label>
            <ComboBox fx:id="trackerComboBox">
                <VBox.margin>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                </VBox.margin>
            </ComboBox>
            <Label fx:id="detectedAmountLabel">
                <font>
                    <Font size="18.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="5.0" top="5.0"/>
                </VBox.margin>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="260.0" text="Threshold"
                   textAlignment="CENTER">
                <padding>
                    <Insets top="10.0"/>
                </padding>
            </Label>
            <Slider fx:id="thresholdSlider" blockIncrement="1.0" majorTickUnit="1.0" max="255.0" minorTickCount="0"
                    snapToTicks="true" value="128.0">
                <padding>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                </padding>
            </Slider>
            <Label fx:id="thresholdValue" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0"
                   prefWidth="229.0" text="0"/>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="260.0"
                   text="Minimum Radius" textAlignment="CENTER">
                <padding>
                    <Insets top="10.0"/>
                </padding>
            </Label>
            <Slider fx:id="minRadiusSlider" blockIncrement="0.1" majorTickUnit="1.0" max="20.0" min="0.1"
                    minorTickCount="0" snapToTicks="true" value="1.0">
                <padding>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                </padding>
            </Slider>
            <Label fx:id="minRadiusValue" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0"
                   prefWidth="229.0" text="0"/>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="260.0"
                   text="Maximum Radius" textAlignment="CENTER">
                <padding>
                    <Insets top="10.0"/>
                </padding>
            </Label>
            <Slider fx:id="maxRadiusSlider" blockIncrement="0.1" majorTickUnit="1.0" max="20.0" min="0.1"
                    minorTickCount="0" snapToTicks="true" value="10.0">
                <padding>
                    <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                </padding>
            </Slider>
            <Label fx:id="maxRadiusValue" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0"
                   prefWidth="229.0" text="0"/>
            <Button fx:id="startButton" alignment="CENTER" mnemonicParsing="false" onAction="#buttonOnAction"
                    text="Start">
                <padding>
                    <Insets bottom="20.0" left="40.0" right="40.0" top="20.0"/>
                </padding>
                <font>
                    <Font size="18.0"/>
                </font>
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
            </Button>
        </VBox>
   </left>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu fx:id="cameraMenu" mnemonicParsing="false" text="Camera">
               <SeparatorMenuItem mnemonicParsing="false">
                   <content>
                       <Separator prefWidth="200.0"/>
                   </content>
               </SeparatorMenuItem>
               <MenuItem mnemonicParsing="false" text="Camera Settings..."/>
           </Menu>
           <Menu mnemonicParsing="false" text="Help">
               <MenuItem mnemonicParsing="false" text="About"/>
           </Menu>
       </MenuBar>
   </top>
</BorderPane>
